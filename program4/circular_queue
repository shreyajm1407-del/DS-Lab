#include <stdio.h>

#define maxsize 3
int queue[maxsize];
int front = -1, rear = -1;

int insert(int item) {
    if (front == (rear + 1) % maxsize) {
        printf("Queue is full\n");
        return 0;
    }

    if (front == -1) {      // first insertion
        front = 0;
        rear = 0;
    } else {
        rear = (rear + 1) % maxsize;
    }

    queue[rear] = item;
    return 1;
}

int delete() {
    if (front == -1) {
        printf("Queue is empty\n");
        return -1;
    }

    int item = queue[front];

    if (front == rear) {    // only one element
        front = -1;
        rear = -1;
    } else {
        front = (front + 1) % maxsize;
    }

    return item;
}

void display() {
    if (front == -1) {
        printf("Queue is empty\n");
        return;
    }

    printf("Queue elements:\n");

    int i = front;
    while (1) {
        printf("%d\n", queue[i]);
        if (i == rear)
            break;
        i = (i + 1) % maxsize;
    }
}

int main() {
    int n = 0, item;

    while (n != 4) {
        printf("1. Insert\n2. Delete\n3. Display\n4. Exit\n");
        scanf("%d", &n);

        switch (n) {
            case 1:
                printf("Enter item to insert: ");
                scanf("%d", &item);
                insert(item);
                break;

            case 2:
                item = delete();
                if (item != -1)
                    printf("Deleted element: %d\n", item);
                break;

            case 3:
                display();
                break;
        }
    }
    return 0;
}
